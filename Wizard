<script type='text/javascript'>
if(window.location.hash === "") window.location.hash = "content";
$(".editPageContent, .editPageAttributes, .deleteThisPage, .editBookTemplate, .hiddenAttribute, .uploadpageslot").remove();
if($("#pageAttrs").find(".row").not(".hiddenAttribute").not(".newAttrListItem").length === 0) {
$("#pageAttrs").prev("h1").remove();
$("#pageAttrs, .showPageAttributes").remove();
$("a[href=\"#attributes\"]").remove();
}
$(".flagthispage").remove();
$("#tableofcontents").show().tableofcontents();
</script>
<script type='text/javascript'>
$(".uploadslot").on("uploadcomplete", function(e, json) {
if(!json) return;
$.post("/account/update_avatar/me", {newavatar: json.base + "?" + new Date().getTime()});
});
$(".uploadslot").on("uploadremoved", function() {
$.post("/account/update_avatar/me", {newavatar: ""});
});
</script>


